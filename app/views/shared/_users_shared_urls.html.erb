<div class="center">
  <h3><%= "The Youtube URL was shared by you"%></h3>
</div>

<div class="container">
  <% @users_shared_urls["data"]["shared_urls"]&.each do |users_shared_url| %>
    <div style="overflow: hidden;">
      <div class="image-container" alt="image" style="float: left; width: 50%;">
        <%= link_to(image_tag("#{users_shared_url['thumbnail_url']}"), users_shared_url["url"], target: "_blank") %>
      </div>
      <p style="float: right; width: 50%;">
        <%= "Movie title: #{users_shared_url['movie_title']} "%><br>
        <%= "Shared by: #{current_user.name}" %><br>
        <%= "Description: #{users_shared_url['description']} "%>
      </p>
    </div>
  <% end %>
</div>
